                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="Total Due -" FontSize="18" HorizontalOptions="Start" VerticalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource TextColourLight}, Dark={StaticResource TextColour}}" FontFamily="Roboto-Regular"/>
                                <Label Grid.Column="1" x:DataType="local:CardManagerViewModel" Text="{Binding FirstCardTransaction.DueAmount}" FontSize="18" FontFamily="Roboto-Medium" TextColor="{AppThemeBinding Light={StaticResource TextColourLight}, Dark={StaticResource TextColour}}" HorizontalOptions="Start" VerticalOptions="Center"/>
