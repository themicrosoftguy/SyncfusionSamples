                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.RowSpan="2" Source="{imageExtention:SfImageResource ellipse638.png}" WidthRequest="40" HeightRequest="40"/>
                                    <Label Grid.Column="1" x:DataType="local:CardManagerViewModel" Text="{Binding FirstCardTransaction.FirstTransaction}" Padding="10,0,0,0" TextColor="{AppThemeBinding Light={StaticResource TextColourLight}, Dark={StaticResource TextColour}}" FontFamily="Roboto-Medium" FontSize="16" VerticalOptions="Start"/>
                                    <Label Grid.Row="1" Grid.Column="1" x:DataType="local:CardManagerViewModel" Text="{Binding FirstCardTransaction.FirstTransactionType}" FontSize="12" TextColor="Gray" Padding="10,0,0,0" FontFamily="Roboto-Regular" VerticalOptions="End"/>
                                    <Label Grid.Column="2" Grid.RowSpan="2" x:DataType="local:CardManagerViewModel" Text="{Binding FirstCardTransaction.FirstTransactionAmount}" FontSize="16" HorizontalOptions="End" VerticalOptions="Center" FontFamily="Roboto-Regular" TextColor="#32CD18"/>
                                </Grid>
                                <Grid Padding="0,10,0,0" Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.RowSpan="2" Source="{imageExtention:SfImageResource ellipse636.png}" WidthRequest="40" HeightRequest="40"/>
                                    <Label Grid.Column="1" x:DataType="local:CardManagerViewModel" Text="{Binding FirstCardTransaction.SecondTransaction}" Padding="10,0,0,0" TextColor="{AppThemeBinding Light={StaticResource TextColourLight}, Dark={StaticResource TextColour}}" FontFamily="Roboto-Medium" FontSize="16" VerticalOptions="Start"/>
                                    <Label Grid.Row="1" Grid.Column="1" x:DataType="local:CardManagerViewModel" Text="{Binding FirstCardTransaction.SecondTransactionType}" FontSize="12" TextColor="Gray" Padding="10,0,0,0" FontFamily="Roboto-Regular" VerticalOptions="End"/>
                                    <Label Grid.Column="2" Grid.RowSpan="2" x:DataType="local:CardManagerViewModel" Text="{Binding FirstCardTransaction.SecondTransactionAmount}" FontSize="16" HorizontalOptions="End" VerticalOptions="Center" FontFamily="Roboto-Regular" TextColor="#EC4832"/>
                                </Grid>
