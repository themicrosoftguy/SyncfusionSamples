<?xml version="1.0" encoding="utf-8" ?>
<SyncfusionControls>
  <ControlCategory Name="Data Visualization">
	  <Control Title="Circular Charts" ControlName="SfCircularChart" Image="circularchart.png" Description="Visualize the data using pie, doughnut and radial bar series.">
		  <Category Title="Type">
			  
			  <SubCategory Title="Pie">
				  <CardLayout>
					  <Sample SearchTags="pie" Name="PieChart" SampleName="PieChart" Title="Default pie" VideoLink="https://www.youtube.com/watch?v=2WDZfXpMZsE" CodeViewerPath="CircularChart/Pie/"/>
					  <Sample SearchTags="SemiPie" Name="SemiPieChart" SampleName="SemiPieChart" Title="Semi-pie chart" Description="This sample shows how to create a semi-pie using start and end angles." CodeViewerPath="CircularChart/Pie/"/>
					  <Sample SearchTags="GroupTopie" Name="GroupToPieChart" SampleName="GroupToPieChart" Title="Grouping" CodeViewerPath="CircularChart/Pie/"/>
					  <Sample SearchTags="smart datalabels" Name="SmartDataLabelsChart" Platforms="Windows,Android,iOS"  SampleName="SmartDataLabels" Title="Smart data labels" CodeViewerPath="CircularChart/Pie/"/>
				  </CardLayout>
			  </SubCategory>
			  <SubCategory Title="Doughnut">
				  <CardLayout>
					  <Sample SearchTags="Doughnut" Name="DoughnutChart" SampleName="DoughnutChart" Title="Default doughnut" CodeViewerPath="CircularChart/Doughnut/"/>
					  <Sample SearchTags="SemiDoughnut" Name="SemiDoughnutChart" SampleName="SemiDoughnutChart" Title="Semi-doughnut chart" Description="This sample shows how to create a semi-doughnut using start and end angles." CodeViewerPath="CircularChart/Doughnut/"/>
					  <Sample SearchTags="GroupToDoughnt" Name="GroupToDoughnt" SampleName="GroupToDoughnutChart" Title="Grouping" CodeViewerPath="CircularChart/Doughnut/"/>
					  <!--<Sample SearchTags="CenterElevation" Name="CenterElevation" SampleName="CenterElevation" Title="Center elevation" CodeViewerPath="CircularChart/Doughnut/"/>-->
				  </CardLayout>
			  </SubCategory>
        <SubCategory Title="Radial Bar">
          <CardLayout>
            <Sample SearchTags="radialbar" Name="RadialBarChart" SampleName="RadialBarChart" Title="Default radial bar" VideoLink="https://www.youtube.com/watch?v=KO7LfFuIwHE" CodeViewerPath="CircularChart/RadialBar/"/>
            <Sample SearchTags="radialbar" Name="CustomizedRadialBarChart" SampleName="CustomizedRadialBarChart" Title="Customized legend" CodeViewerPath="CircularChart/RadialBar/"/>
          </CardLayout>
        </SubCategory>
		  </Category>
		  <Category Title="Interaction">
			  <Sample SearchTags="tooltip" Name="Tooltip" SampleName="Tooltip" Title="Tooltip"  Description="This sample showcases the tooltip feature. On mobile, tap the data points, and on desktop, mouse over to the data points to raise the tooltip." CodeViewerPath="CircularChart/Interaction/"/>
			  <Sample SearchTags="select, highlight" Name="Selection" SampleName="Selection" 
                Title="Selection"  
                Description="This sample depicts the selection feature in the chart. On mobile, tap the data points, and on desktop, click the data points to select or deselect them."
                CodeViewerPath="CircularChart/Interaction/"/>
		  </Category>
	  </Control>
  </ControlCategory>
</SyncfusionControls>
