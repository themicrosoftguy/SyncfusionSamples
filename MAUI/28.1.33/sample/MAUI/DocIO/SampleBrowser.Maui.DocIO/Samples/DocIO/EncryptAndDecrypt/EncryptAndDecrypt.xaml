<?xml version="1.0" encoding="UTF-8"?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:badge="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      x:Class="SampleBrowser.Maui.DocIO.DocIO.EncryptAndDecrypt">
	<localCore:SampleView.Content>
		<StackLayout Margin="10">
            <Label x:Name="description" LineBreakMode="WordWrap" Text="This example demonstrates how to encrypt and decrypt a Word document."
                 VerticalOptions="Center" Margin="0,0,5,0"/>
			<Label x:Name="label1" Text=" "></Label>
            <Label x:Name="note" LineBreakMode="WordWrap" Text="Use the password &quot;syncfusion&quot; to open an encrypted Word document."
                 VerticalOptions="Center" Margin="0,0,5,0"/>
			<Label x:Name="label2" Text=" "></Label>
            <Label x:Name="encryptButtonDescription" LineBreakMode="WordWrap" Text="Click the &quot;Encrypt Document&quot; button to view the encrypted Word document."
                  VerticalOptions="Center" Margin="0,0,5,0">
			</Label>
			<Label x:Name="label3" Text=" "></Label>
            <Label x:Name="decryptButtonDescription" LineBreakMode="WordWrap" Text="Click the &quot;Decrypt Document&quot; button to view the decrypted Word document. Please note that a Word-compatible viewer is required to open and view the Word document."
                  VerticalOptions="Center" Margin="0,0,5,0">
			</Label>
			<Label x:Name="label4" Text=" "></Label>
            <StackLayout x:Name="stkLayout" Orientation="Horizontal" Spacing="10">
				<Button x:Name="btnEncryptDocument" Clicked ="EncryptButton_Click" Text ="Encrypt Document" HorizontalOptions="Start"/>
				<Button x:Name="btnDecryptDocument" Clicked ="DecryptButton_Click" Text ="Decrypt Document" HorizontalOptions="Start"/>
			</StackLayout>
		</StackLayout>
	</localCore:SampleView.Content>
</localCore:SampleView>