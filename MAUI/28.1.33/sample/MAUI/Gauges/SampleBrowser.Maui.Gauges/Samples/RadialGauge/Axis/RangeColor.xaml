<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      x:Class="SampleBrowser.Maui.Gauges.SfRadialGauge.RangeColor"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      xmlns:gauge="clr-namespace:Syncfusion.Maui.Gauges;assembly=Syncfusion.Maui.Gauges">
    <localCore:SampleView.Content>
        <gauge:SfRadialGauge x:Name="rangeColorGauge" HorizontalOptions="Center">
            <gauge:SfRadialGauge.Axes>
                <gauge:RadialAxis ShowAxisLine="False"
                                                  TickPosition="Outside"
                                                  LabelPosition="Outside"
                                                  RadiusFactor="0.6"
                                                  StartAngle="270"
                                                  EndAngle="270"
                                                  UseRangeColorForAxis="True"
                                                  Interval="10"
                                                  ShowFirstLabel="False"
                                                  IsInversed="True"
                                                  MinorTicksPerInterval="4">
                    <gauge:RadialAxis.MajorTickStyle>
                        <gauge:RadialTickStyle LengthUnit="Factor"
                                                             Length="0.15"
                                                             Stroke="#999999"
                                                             StrokeThickness="1.5" />
                    </gauge:RadialAxis.MajorTickStyle>
                    <gauge:RadialAxis.MinorTickStyle>
                        <gauge:RadialTickStyle LengthUnit="Factor"
                                                             Length="0.04"
                                                             Stroke="#C4C4C4"
                                                             StrokeThickness="1.5" />
                    </gauge:RadialAxis.MinorTickStyle>
                    <gauge:RadialAxis.Ranges>
                        <gauge:RadialRange WidthUnit="Factor"
                                                          OffsetUnit="Factor"
                                                          RangeOffset="0.05"
                                                          StartWidth="0.05"
                                                          EndWidth="0.25"
                                                          StartValue="0"
                                                          EndValue="35"
                                                          Fill="#FFBC5A34">
                        </gauge:RadialRange>
                        <gauge:RadialRange WidthUnit="Factor"
                                                          OffsetUnit="Factor"
                                                          RangeOffset="0.05"
                                                          StartWidth="0.05"
                                                          EndWidth="0.25"
                                                          StartValue="35"
                                                          EndValue="70"
                                                          Fill="#FF3F7BAB">
                        </gauge:RadialRange>
                        <gauge:RadialRange WidthUnit="Factor"
                                                          OffsetUnit="Factor"
                                                          RangeOffset="0.05"
                                                          StartWidth="0.05"
                                                          EndWidth="0.25"
                                                          StartValue="70"
                                                          EndValue="100"
                                                          Fill="#FFB75772">
                        </gauge:RadialRange>
                    </gauge:RadialAxis.Ranges>
                </gauge:RadialAxis>
            </gauge:SfRadialGauge.Axes>
        </gauge:SfRadialGauge>
    </localCore:SampleView.Content>

</localCore:SampleView>
