<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.Pdf.Pdf.Invoice"
             xmlns:local="clr-namespace:SampleBrowser.Maui.Pdf"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base">
    <localCore:SampleView.Content>
        <StackLayout Margin="10">
            <Label x:Name="description" LineBreakMode="WordWrap" Text="This demo shows how to create simple invoice report using PDF grid with built-in styles." VerticalOptions="Center" Margin="0,0,5,0">
            </Label>
            <Label x:Name="label1" Text=" " VerticalOptions="Center"></Label>

            <Label x:Name="buttonDescription" LineBreakMode="WordWrap" Text="Please click the Create Invoice button to save and view the PDF document generated by the Syncfusion PDF library."
                  VerticalOptions="Center" Margin="0,0,5,0">
            </Label>

            <Label x:Name="label2" Text=" " VerticalOptions="Center"></Label>
            <Button x:Name="generateDocument" Clicked ="OnButtonClicked" Text ="Create Invoice" HorizontalOptions="Start"></Button>
        </StackLayout>
    </localCore:SampleView.Content>
</localCore:SampleView>
