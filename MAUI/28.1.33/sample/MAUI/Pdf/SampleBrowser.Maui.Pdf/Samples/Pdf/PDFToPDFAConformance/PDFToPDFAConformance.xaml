<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.Pdf.Pdf.PDFToPDFAConformance"
                 xmlns:local="clr-namespace:SampleBrowser.Maui.Pdf"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base">
    <localCore:SampleView.Content>
        <StackLayout Margin="10">
            <Label x:Name="description" LineBreakMode="WordWrap" Text="This demo shows how to convert a PDF document to a PDF/A-conforming document for archiving and long-term preservation. This feature converts the PDF document without affecting its quality and content." VerticalOptions="Center" Margin="0,0,5,0">
            </Label>
            <Label x:Name="label1" Text=" "></Label>
            <Label x:Name="viewButtonDescription" LineBreakMode="WordWrap" Text="Click the View Template button to view the predefined input PDF document."
                  VerticalOptions="Center" Margin="0,0,5,0">
            </Label>
            <Label x:Name="label2" Text=" " VerticalOptions="Center"></Label>

            <Label x:Name="buttonDescription" LineBreakMode="WordWrap" Text="Please click the Convert to PDF/A button to save and view the PDF document generated by the Syncfusion PDF library."
                  VerticalOptions="Center" Margin="0,0,5,0">
            </Label>

            <Label x:Name="label3" Text=" " VerticalOptions="Center"></Label>
            <StackLayout x:Name="stkLayout" Orientation="Horizontal" Spacing="10">
                <Button x:Name="btnViewTemplate" Clicked ="ButtonView_Click" Text ="View Template" HorizontalOptions="Start"/>
                <Button x:Name="generateDocument" Clicked ="OnButtonClicked" Text ="Convert to PDF/A" HorizontalOptions="Start"></Button>
            </StackLayout>
        </StackLayout>
    </localCore:SampleView.Content>
</localCore:SampleView>
