<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.Pdf.Pdf.WatermarkAnnotation"
                 xmlns:local="clr-namespace:SampleBrowser.Maui.Pdf"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base">
    <localCore:SampleView.Content>
        <StackLayout Margin="10">           
            <Label x:Name="description" LineBreakMode="WordWrap" Text="This demo shows how to add watermark annotation to the PDF document." VerticalOptions="Center" Margin="0,0,5,0">
            </Label>

            <Label x:Name="label1" Text=" " VerticalOptions="Center"></Label> 

            <Label x:Name="buttonDescription" LineBreakMode="WordWrap" Text="Please click the Generate PDF button to save and view the PDF document generated by the Syncfusion PDF library."
                  VerticalOptions="Center" Margin="0,0,5,0">
            </Label>

            <Label x:Name="label3" Text=" " VerticalOptions="Center"></Label>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                <CheckBox Grid.Column="0" x:Name="flatten" VerticalOptions="Start"></CheckBox>
                <Label Grid.Column="1" x:Name="lable4" Padding="5" VerticalOptions="Center" Text="Flatten Annotation"></Label>
                </Grid>

            <Label x:Name="label2" Text=" " VerticalOptions="Center"></Label>
            <Button x:Name="generateDocument" Clicked ="OnButtonClicked" Text ="Generate PDF" HorizontalOptions="Start"></Button>
        </StackLayout>
    </localCore:SampleView.Content>
</localCore:SampleView>
