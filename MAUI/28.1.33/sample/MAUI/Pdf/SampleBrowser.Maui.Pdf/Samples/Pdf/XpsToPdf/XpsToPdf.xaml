<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.Pdf.Pdf.XPSToPDF"
                 xmlns:local="clr-namespace:SampleBrowser.Maui.Pdf"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base">

    <localCore:SampleView.Content>
        <StackLayout Margin="10">
            <Label x:Name="description" LineBreakMode="WordWrap" Text="This demo shows how to convert the XPS to PDF document." VerticalOptions="Center" Margin="0,0,5,0">
            </Label>

            <Label x:Name="label1" Text=" " VerticalOptions="Center"></Label>

            <Label x:Name="buttonDescription" LineBreakMode="WordWrap" Text="Please click the Convert to PDF button to save and view the PDF document generated by the Syncfusion PDF library."
      VerticalOptions="Center" Margin="0,0,5,0">
            </Label>
            <Label x:Name="label3" Text=" " VerticalOptions="Center"></Label>
            <StackLayout x:Name="stkLayout" Orientation="Horizontal" Spacing="10">
                <Button x:Name="generateDocument" Clicked ="OnButtonClicked" Text ="Convert to PDF" HorizontalOptions="Start"></Button>
            </StackLayout>
        </StackLayout>
    </localCore:SampleView.Content>
</localCore:SampleView>