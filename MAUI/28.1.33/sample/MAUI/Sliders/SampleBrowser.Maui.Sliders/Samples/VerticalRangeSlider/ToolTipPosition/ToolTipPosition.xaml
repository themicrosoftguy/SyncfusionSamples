<?xml version="1.0" encoding="utf-8" ?>
<sb:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:sb="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
               xmlns:sliders="clr-namespace:Syncfusion.Maui.Sliders;assembly=Syncfusion.Maui.Sliders"
               x:Class="SampleBrowser.Maui.Sliders.VerticalRangeSlider.VerticalRangeSliderTooltipPositionSample">

    <sb:SampleView.Resources>
        <Style TargetType="sliders:SfRangeSlider">
            <Setter Property="Orientation"
                    Value="Vertical" />
            <Setter Property="ShowLabels"
                    Value="True" />
            <Setter Property="ShowTicks"
                    Value="True" />
            <Setter Property="MaximumHeightRequest"
                    Value="300" />
        </Style>

        <Style TargetType="sliders:SfDateTimeRangeSlider">
            <Setter Property="Orientation"
                    Value="Vertical" />
            <Setter Property="ShowLabels"
                    Value="True" />
            <Setter Property="ShowTicks"
                    Value="True" />
            <Setter Property="MaximumHeightRequest"
                    Value="300" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="TextColor"
                  Value="{AppThemeBinding Default={StaticResource ContentForeground}}"/>
            <Setter Property="HorizontalOptions"
                    Value="Center" />
        </Style>
    </sb:SampleView.Resources>

    <sb:SampleView.Content>
        <ScrollView>
            <Grid RowDefinitions="300,Auto,30,Auto"
                  ColumnDefinitions="*,*"
                  WidthRequest="350"
                  VerticalOptions="Center">

                <sliders:SfRangeSlider Grid.Row="0"
                                       Grid.Column="0"
                                       Minimum="10"
                                       Maximum="40"
                                       RangeStart="20"
                                       RangeEnd="30"
                                       Interval="10">

                    <sliders:SfRangeSlider.Tooltip>
                        <sliders:SliderTooltip Position="Right" Fill="{AppThemeBinding Default={StaticResource SfSliderNormalTooltipFillBrush}}"
                                               ShowAlways="{Binding Source={x:Reference tooltipCheckBox}, Path=IsChecked}" 
                                               TextColor="{AppThemeBinding Default={StaticResource SfSliderNormalTooltipTextColor}}"/>
                    </sliders:SfRangeSlider.Tooltip>
                </sliders:SfRangeSlider>

                <Label Grid.Row="1"
                       Grid.Column="0"
                       Text="Tooltip on the right"
                       Margin="-30,0,0,0" />

                <sliders:SfDateTimeRangeSlider Grid.Row="0"
                                               Grid.Column="1"
                                               Minimum="2000-01-01T09:00:00"
                                               Maximum="2000-01-01T21:00:00"
                                               RangeStart="2000-01-01T13:00:00"
                                               RangeEnd="2000-01-01T17:00:00"
                                               IntervalType="Hours"
                                               MinorTicksPerInterval="3"
                                               Interval="4"
                                               DateFormat="h tt">

                    <sliders:SfDateTimeRangeSlider.Tooltip>
                        <sliders:SliderTooltip DateFormat="h:mm tt" Fill="{AppThemeBinding Default={StaticResource SfSliderNormalTooltipFillBrush}}"
                                               Position="Left"
                                               ShowAlways="{Binding Source={x:Reference tooltipCheckBox}, Path=IsChecked}" 
                                               TextColor="{AppThemeBinding Default={StaticResource SfSliderNormalTooltipTextColor}}"/>
                    </sliders:SfDateTimeRangeSlider.Tooltip>
                </sliders:SfDateTimeRangeSlider>

                <Label Grid.Row="1"
                       Grid.Column="1"
                       Text="Tooltip on the left"
                       Margin="0,0,-50,0" />

                <Grid Grid.Row="3"
                      Grid.ColumnSpan="2"
                      ColumnDefinitions="Auto,Auto"
                      HorizontalOptions="Center">
                    <Label Text="Show tooltip always"
                           Padding="5"
                           VerticalOptions="Center"
                           VerticalTextAlignment="Center" />
                    <CheckBox x:Name="tooltipCheckBox"
                              Grid.Column="1" />
                </Grid>
            </Grid>
        </ScrollView>
    </sb:SampleView.Content>
</sb:SampleView>
