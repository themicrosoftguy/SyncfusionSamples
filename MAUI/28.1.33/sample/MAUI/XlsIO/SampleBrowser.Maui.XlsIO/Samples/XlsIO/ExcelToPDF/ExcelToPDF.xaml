<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.XlsIO.XlsIO.ExcelToPDF"
             xmlns:badge="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
             >
    <localCore:SampleView.Content>
        <StackLayout Margin="10">
            <Label x:Name="SampleDescription" LineBreakMode="WordWrap" Text="This example demonstrates how to convert an Excel workbook to PDF."
                 VerticalOptions="Center">
            </Label>
            <Label Text=" "/>
            <Label x:Name="textBlock1" LineBreakMode="WordWrap" Text="Click the &quot;Input Template&quot; button to view the input Excel workbook. Please note that an Excel-compatible viewer is required to open and view the Excel file."/>
            <Label Text=" "></Label>
            <Label x:Name="textBlock2"   LineBreakMode="WordWrap" Text="Click the &quot;Convert to PDF&quot; button will convert the Excel workbook to PDF. Please note that PDF compatible viewer is required to open and view the PDF document."/>
            <Label Text=" "></Label>   
            <StackLayout x:Name="stkLayout" Orientation="Horizontal" Spacing="10">
                <Button x:Name="btnInput" Clicked ="btnInput_Click" Text ="Input Template" HorizontalOptions="Start" VerticalOptions="Center"></Button>
                <Button x:Name="btnConvertToPdf" Clicked ="btnConvertToPDF_Click" Text ="Convert To PDF" HorizontalOptions="Start" VerticalOptions="Center"></Button>
            </StackLayout>
        </StackLayout>
    </localCore:SampleView.Content>

</localCore:SampleView>


  
  
