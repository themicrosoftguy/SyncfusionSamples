<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView
            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.XlsIO.XlsIO.PivotTable"
             xmlns:badge="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
             >
    <localCore:SampleView.Content>
        <StackLayout Margin="10">
            <Label x:Name="SampleDescription" LineBreakMode="WordWrap" Text="This example demonstrates how to create a pivot table using Essential XlsIO."
                 VerticalOptions="Center">
            </Label>
            <Label Text=" "/>
            <Label x:Name="textBlock1" LineBreakMode="WordWrap" Text="Click the &quot;Create Pivot Table&quot; button to view the created Excel file generated using Essential XlsIO. Please note that an Excel-compatible viewer is required to open and view the Excel file."/>
           
            <Label Text=" "/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>                    
                </Grid.ColumnDefinitions>
                <CheckBox Grid.Column="0" x:Name="chkboxGroupingFilter" VerticalOptions="Start"></CheckBox>
                <Label Grid.Column="1" x:Name="lable4" VerticalOptions="Center" Text="Apply Grouping"></Label>
            </Grid>
            
            <Label Text=" "/>
            <Button x:Name="btnCreate" Clicked ="btnCreate_Click" Text ="Generate Pivot Table" HorizontalOptions="Start" VerticalOptions="Center"></Button>
        </StackLayout>
    </localCore:SampleView.Content>

</localCore:SampleView>