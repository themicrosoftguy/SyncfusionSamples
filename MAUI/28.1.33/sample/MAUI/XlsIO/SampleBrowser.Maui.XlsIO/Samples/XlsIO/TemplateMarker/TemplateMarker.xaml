<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView
            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.XlsIO.XlsIO.TemplateMarker"
             xmlns:badge="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
             >

    <localCore:SampleView.Content>
        <StackLayout Margin="10">
            <Label x:Name="SampleDescription" LineBreakMode="WordWrap" Text="This example demonstrates how to import data to a predefined Excel template."
                 VerticalOptions="Center">
            </Label>
            <Label Text=" "/>
            <Label x:Name="Text1" LineBreakMode="WordWrap" Text="Click the &quot;Input Template&quot; button to view the predefined Excel template. Click the &quot;Generate Document&quot; button to view the created Excel document after importing the data. Please note that an Excel-compatible viewer is required to open and view the Excel file."
                  VerticalOptions="Center">
            </Label>
            <Label Text=" "/>
            <StackLayout x:Name="stkLayout" Orientation="Horizontal" Spacing="10">
                <Button x:Name="btnInput" Clicked ="btnInput_Click" Text ="Input Template" HorizontalOptions="Start" VerticalOptions="Center"></Button>
                <Button x:Name="btnCreate" Clicked ="btnCreate_Click" Text ="Generate Document" HorizontalOptions="Start" VerticalOptions="Center"></Button>
            </StackLayout>
        </StackLayout>
    </localCore:SampleView.Content>

</localCore:SampleView>
    
