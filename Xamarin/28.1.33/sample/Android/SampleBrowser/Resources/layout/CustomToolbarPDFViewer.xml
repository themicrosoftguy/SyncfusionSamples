          android:layout_gravity="center|center_vertical" />      
   
         </GridLayout>   
        <GridLayout
         android:background="#E9E9E9"           
         android:layout_width="wrap_content"
         android:columnCount="3"
         android:layout_gravity="right"
         android:layout_height="40dp">
