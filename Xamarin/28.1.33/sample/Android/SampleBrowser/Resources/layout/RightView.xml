<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rightView"
    android:layout_height="0dip"
    android:layout_width="fill_parent"
    android:layout_weight="1"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:gravity="right"
    android:orientation="vertical">
    <Button
        android:layout_marginTop="5dp"
        android:background="@drawable/FirstColorButton"
        android:id="@+id/firstButton"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:textColor="@color/white" />
    <Button
        android:layout_marginTop="5dp"
        android:background="@drawable/SecondColorButton"
        android:id="@+id/secondButton"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:textColor="@color/black" />
    <Button
        android:layout_marginTop="5dp"
        android:background="@drawable/ThirdColorButton"
        android:id="@+id/thirdButton"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:textColor="@color/white" />
    <Button
        android:layout_marginTop="5dp"
        android:background="@drawable/FourthColorButton"
        android:id="@+id/fourthButton"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:textColor="@color/black" />
    <Button
        android:layout_marginTop="5dp"
        android:background="@drawable/FifthColorButton"
        android:id="@+id/fifthButton"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:textColor="@color/white" />
    <Button
        android:layout_marginTop="5dp"
        android:background="@drawable/SixthColorButton"
        android:id="@+id/sixthButton"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:textColor="@color/black" />
    <Button
        android:layout_marginTop="5dp"
        android:background="@drawable/SeventhColorButton"
        android:id="@+id/seventhButton"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:textColor="@color/white" />
    <Button
        android:layout_marginTop="5dp"
        android:background="@drawable/EightColorButton"
        android:id="@+id/eightButton"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:textColor="@color/black" />
    <Button
        android:layout_marginTop="5dp"
        android:background="@drawable/NinthColorButton"
        android:id="@+id/ninthButton"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:textColor="@color/black" />
    <Button
        android:layout_marginTop="5dp"
        android:background="@drawable/TenthColorButton"
        android:id="@+id/tenthButton"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:textColor="@color/white" />
</LinearLayout>