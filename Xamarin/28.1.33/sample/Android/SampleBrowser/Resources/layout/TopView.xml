<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topView"
    android:layout_height="50dip"
    android:layout_width="fill_parent"
    android:layout_weight="1"
    android:background="@android:color/transparent"
    android:orientation="horizontal">
    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitCenter"
        android:id="@+id/resetButton"
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="15dp"
        android:src="@drawable/reset_customization"
        android:textColor="@color/white" />
    <ImageButton
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:id="@+id/redoButton"
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white" />
    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitCenter"
        android:id="@+id/undoButton"
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="15dp"
        android:src="@drawable/undo_customization"
        android:textColor="@color/white" />
    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitCenter"
        android:id="@+id/rectButton"
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="15dp"
        android:src="@drawable/rect_customization"
        android:textColor="@color/white" />
    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitCenter"
        android:id="@+id/textButton"
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="15dp"
        android:src="@drawable/text_customization"
        android:textColor="@color/white" />
    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitCenter"
        android:id="@+id/pathButton"
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:layout_width="15dp"
        android:src="@drawable/pen_customization"
        android:textColor="@color/white" />
</LinearLayout>