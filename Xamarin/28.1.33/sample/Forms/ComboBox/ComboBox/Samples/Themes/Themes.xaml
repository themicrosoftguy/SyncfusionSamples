<?xml version="1.0" encoding="UTF-8"?>
<local:SampleView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:local="clr-namespace:SampleBrowser.Core;assembly=SampleBrowser.Core" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  xmlns:combobox="clr-namespace:Syncfusion.XForms.ComboBox;assembly=Syncfusion.SfComboBox.XForms" x:Class="SampleBrowser.SfComboBox.Themes">
    <StackLayout x:Name="layoutRoot" VerticalOptions="FillAndExpand" Padding="30">
        <Label Text="Select a Person" VerticalTextAlignment="Start" HorizontalTextAlignment="Start"/>
       <combobox:SfComboBox HeightRequest="40" x:Name="comboBox" Watermark="Select a Person">
            <combobox:SfComboBox.DropDownButtonSettings>
                <combobox:DropDownButtonSettings Width="{x:OnPlatform WPF=28,UWP=28}"/>
            </combobox:SfComboBox.DropDownButtonSettings>
       </combobox:SfComboBox>
    </StackLayout>
</local:SampleView>
