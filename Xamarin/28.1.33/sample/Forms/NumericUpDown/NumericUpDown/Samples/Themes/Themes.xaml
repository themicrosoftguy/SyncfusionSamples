<?xml version="1.0" encoding="UTF-8"?>
<local:SampleView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:numeric="clr-namespace:Syncfusion.SfNumericUpDown.XForms;assembly=Syncfusion.SfNumericUpDown.XForms" xmlns:local="clr-namespace:SampleBrowser.Core;assembly=SampleBrowser.Core" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SampleBrowser.SfNumericUpDown.Themes">

    <ScrollView  IsClippedToBounds="true">
        <Grid  Margin="15">
            <StackLayout>
                <Label x:Name="principalLabel" Text="Pick a value between 0 to 10." VerticalOptions="Start" HorizontalOptions="Start" FontSize="16" HeightRequest="30" />
                <StackLayout>
                    <numeric:SfNumericUpDown Margin="0,7,10,10" x:Name="AppleCount" Minimum="0" Maximum="10" MaximumDecimalDigits="0" HeightRequest="50" WidthRequest="50" MinimumHeightRequest="50" HorizontalOptions="FillAndExpand" VerticalOptions="Center" FormatString="n"
                            Watermark="Units" Value="0" SpinButtonAlignment="Both" TextAlignment="Center" />
                </StackLayout>
            </StackLayout>
        </Grid>
    </ScrollView>
</local:SampleView>