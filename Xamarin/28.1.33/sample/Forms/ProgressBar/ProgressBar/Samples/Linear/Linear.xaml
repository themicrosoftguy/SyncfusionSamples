              <RowDefinition.Height>
                <OnPlatform x:TypeArguments="GridLength">
                  <On Platform="UWP">
                    <OnIdiom x:TypeArguments="GridLength" Desktop="*" Tablet="*" Phone="*" />
                  </On>
                  <On Platform="Android">
                    <OnIdiom x:TypeArguments="GridLength" Desktop="*" Tablet="*" Phone="56"/>
                  </On>
                  <On Platform="iOS">
                    <OnIdiom x:TypeArguments="GridLength" Desktop="*" Tablet="*" Phone="*"/>
                  </On>
                </OnPlatform>
              </RowDefinition.Height>
            </RowDefinition>
          </Grid.RowDefinitions>
        </Grid>
      </ScrollView>
    </core:SampleView.Content>
</core:SampleView>