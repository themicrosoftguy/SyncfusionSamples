<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:sfpdfviewer="clr-namespace:Syncfusion.SfPdfViewer.XForms;assembly=Syncfusion.SfPdfViewer.XForms"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SampleBrowser.SfSignaturePad.SignatureImagePage">
    <ContentPage.Content>
        <Grid x:Name="mainGrid" 
              HorizontalOptions="FillAndExpand" 
              VerticalOptions="FillAndExpand" 
              RowSpacing="0">
            <sfpdfviewer:SfPdfViewer x:Name="pdfViewerControl" 
                                     ShowPageNumber="False" 
                                     PreserveSignaturePadOrientation="True"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>